{
	"name": "markdown-tools",
	"displayName": "markdown-tools",
	"description": "markdown tools",
	"version": "0.0.1",
	"publisher": "creaink",
	"repository": "https://github.com/creaink/vscode-markdown-tools",
	"bugs": {
		"url": "https://github.com/creaink/vscode-markdown-tools/issues"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onCommand:markdown-tools."
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-tools.copyReferLink",
				"title": "Copy Current Title Refer Link"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == markdown",
					"command": "markdown-tools.copyReferLink",
					"group": "markdown-tools"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
